            <div class="leaderboard__value">$<%= results[0].total_cost - results[0].unpaid_cost %> </div>
          </div>
        </div>
        <!-- THIRD PLACE -->
        <div class="col-2 text-center">
          <div class="placement">
            <img src="images/badsanta.jpg" class="circle" >
          </div>
          <span class="hex-label bronze-label">3</span>
          <div class="info">
          <div class="top-leaderboard__name"><%= results[2].name %></div>
          <hr class="text-bar">
          <div class="leaderboard__value">$<%= results[2].total_cost - results[2].unpaid_cost %> </div>
        </div>
        </div>

        <% results.slice(0, 3).forEach((user, i)=>{  %>

        <% }) %>
      </div>
        <div class="row pt-4 justify-content-center">
          <div class="col-4 pt-4">
              <div class="leaderboard__profiles">
                  <% results.slice(3, 10).forEach((user, i)=>{  %>
                        <article  id="order-id-<%=i%>" class="leaderboard__profile center">
                          <span class="leaderboard__rank"><%=i+4%></span>
                          <span class="leaderboard__name"><%= user.name %></span>
                          <span class="leaderboard__value float-end"><span>$</span><%= user.total_cost - user.unpaid_cost %> </span>
                        </article>
                        
                <% }) %>
              </div>
            </div>
          </div>
