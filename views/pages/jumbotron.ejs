            <div class="info">
              <div class="top-leaderboard__name"><%= results[1].name %></div>
              <hr class="text-bar">
              <div class="leaderboard__value">$<%= results[1].total_cost - results[1].unpaid_cost %> </div>
            </div>
        </div>
